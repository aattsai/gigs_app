<div class="ui middle aligned segment center aligned">
  <div class="column">
    <h2 class="ui black image header">
      <div class="content">
        Gig Details:
      </div>
    </h2>
    <%= form_for @gig, class:"ui large form" do |f| %>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_field :title  %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_field :location, rows: '5' %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.number_field :price %>
          </div>
        </div>
        <div class="ui form">
          <div class="field">
            <div class="ui fluid left icon input">
              <%= f.text_area :description %>
            </div>
          </div>
        </div>
        <div class="sign-up-button">
          <%= f.submit 'Save changes', class: "ui large fluid basic gray submit button" %>
        </div>
      </div>
    <% end %>

  </div>
</div>