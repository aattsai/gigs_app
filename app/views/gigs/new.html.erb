<div class="ui middle aligned segment center aligned">
  <div class="column">
    <h2 class="ui black image header">
      <div class="content">
        Gig Details:
      </div>
    </h2>
    <%= form_for Gig.new, class:"ui large form" do |f| %>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_field :title, placeholder: "Title", :required => true %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_field :venue, placeholder: "Venue", :required => true %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_field :address, placeholder: "Address", :required => true %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_field :zipcode, placeholder: "Zip Code", :required => true %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.date_field :date, :required => true %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.time_field :time, :required => true %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.number_field :price, placeholder: "Quote", :required => true %>
          </div>
        </div>
        <div class="ui form">
          <div class="field">
            <div class="ui fluid left icon input">
              <%= f.text_area :description, placeholder: "Description", :required => true %>
            </div>
          </div>
        </div>
        <div class="sign-up-button">
          <%= f.submit 'Submit Gig', class: "ui large fluid basic gray submit button" %>
        </div>
      </div>
    <% end %>

  </div>
</div>