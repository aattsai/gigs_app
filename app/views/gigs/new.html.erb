<div class="ui middle aligned segment center aligned">
  <div class="column">
    <h2 class="ui black image header">
      <div class="content">
        Gig Details:
      </div>
    </h2>
    <%= form_for Gig.new, class:"ui large form" do |f| %>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_field :title, placeholder: "Title" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_field :location, rows: '5', placeholder: "Location" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.number_field :price, placeholder: "Price" %>
          </div>
        </div>
        <div class="ui form">
          <div class="field">
            <div class="ui fluid left icon input">
              <%= f.text_area :description, placeholder: "Description" %>
            </div>
          </div>
        </div>
        <div class="sign-up-button">
          <%= f.submit 'Submit Gig', class: "ui large fluid basic gray submit button" %>
        </div>
      </div>
    <% end %>

  </div>
</div>