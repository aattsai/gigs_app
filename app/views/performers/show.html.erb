<div class="ui vertical stripe segment">
  <div class="ui middle aligned stackable grid container">
    <div class="row">
      <div class="eight wide column">
        <h3 class="ui header">
          <%= performer.full_name %>
        </h3>
        <p>
          <b>Joined: </b><%= performer.created_at.strftime("%B %Y") %>
        </p>
        <p>
          <b>Instruments: </b>
          <% if performer.instruments %>
            <%= performer.instruments %>
          <% else %>
            Bananas
          <% end %>
        </p>
        <p>
          <b>Affiliates: </b>
          <% if performer.affiliates %>
            <%= performer.affiliates %>
          <% else %>
            tell us a little bit about yourself, we are curious!
          <% end %>
        </p>
        <p>
          <b>Bio: </b>
          <% if performer.bio.length > 1 %>
            <%= performer.bio %>
          <% else %>
            tell us a little bit about yourself, we are curious!
          <% end %>
        </p>
        <% if performer.rating %>
          <div class="ui rating view" data-rating=<%= performer.rating.to_s %> data-max-rating="5"></div>
        <% else %>
          <div class="ui rating view" data-rating="0" data-max-rating="5"></div>
        <% end %>
      </div>
      <div class="six wide right floated center aligned column">
        <div class='middle aligned container'>
          <%= image_tag(performer.avatar.url, width: '50%', height: '50%') %>
        </div>
      </div>
    </div>
    <iframe width="420" height="315" src='https://www.youtube.com/embed/<%= @youtube_id %>' frameborder="0" allowfullscreen></iframe>
    <% if performer.id == current_user.id && current_user.class == performer.class %>
      <div class="row">
        <div class="center aligned column">
          <%= link_to "Update Profile", edit_performer_path(performer.id), class:"ui basic orange medium button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>