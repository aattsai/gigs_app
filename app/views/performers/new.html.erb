<div class="ui middle aligned segment center aligned">
  <div class="profile-edit-column">
    <h2 class="ui black image header">
      <div class="content">
        Sign up to take on gigs today!
      </div>
    </h2>
    <%= form_for Performer.new, class:"ui large form" do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui fluid left icon input">
            <i class="user icon"></i>
            <%= f.text_field :full_name, placeholder:"Full Name" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <i class="mail icon"></i>
            <%= f.text_field :email, placeholder:"E-mail" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, placeholder: "Password", :required => true %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <i class="world icon"></i>
            <%= f.text_field :location, placeholder: "Location" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <i class="play icon"></i>
            <%= f.text_field :instruments, placeholder: "Instruments" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <i class="student icon"></i>
            <%= f.text_field :affiliates, placeholder: "Affiliates" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <i class="student icon"></i>
            <%= f.text_field :degree, placeholder: "Degree" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <i class="student icon"></i>
            <%= f.text_field :youtube, placeholder: "Youtube Playlist/Video" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.text_area :bio, placeholder: "Biography", rows: '10', cols: "60" %>
          </div>
        </div>
        <div class="field">
          <div class="ui fluid left icon input">
            <%= f.file_field :avatar %>
          </div>
        </div>
        <div class="sign-up-button">
          <%= f.submit 'Sign up', class: "ui large fluid basic gray submit button" %>
        </div>
      </div>
    <% end %>
    <div class="ui message">
      Already have an account?
      <%= link_to "Login", user_login_path %>
    </div>
  </div>
</div>