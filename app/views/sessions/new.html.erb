<div class="ui vertical masthead left aligned segment">
<div class="ui container">
  <div class="row">
    <%= form_tag sessions_path, :class => "ui form" do %>
        <div class="field">
        <%= label_tag :username %>
        <div class="ui fluid left icon input">
          <i class="user icon"></i>
          <%= text_field_tag :username %>
        </div>
      </div>
      <div class ="field">
        <%= label_tag :password %>
        <div class="ui fluid left icon input">
          <i class="lock icon"></i>
          <%= password_field_tag :password %>
        </div>
      </div>
      <div>
      <div class="ui toggle checkbox">
        <%= check_box_tag :checkbox, name: "public" %>
        <label> Work</label>
      </div>
      </div>
      <br>
      <%= submit_tag 'Login', :class => "ui teal button" %>
    <% end %>
  </div>
</div>
</div>