<div class="ui middle aligned segment center aligned main">
  <section id="form">
    <h1>Mailbox</h1>
    <% if @conversations.length == 0 %>
      <h4>You have an empty mailbox.</h4>
    <% else %>
    <div class="ui relaxed divided list">
      <% @conversations.each do |conversation| %>
      <div class="item">
        <% if conversation.user_id == current_user.id || conversation.performer_id == current_user.id %>
        <div class="content">
          <%= link_to conversation.performer.full_name, conversation_messages_path(conversation.id), class: "header" %>
          <div class="description">
            <%= "#{time_ago_in_words(conversation.updated_at)} ago" %>
          </div>
        </div>
        <div class='convo-row'>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <% end %>
  </section>
</div>