<h2>Message to: <b><%= @conversation.user.full_name %></b></h2>
<div class="chatboxcontent">
    <% if @messages.any? %>
        <%= render @messages %>
    <% end %>
</div>

<div class="chatboxinput">
    <%= form_for([@conversation, Message.new], :remote => true,
    :html => {id: "conversation_form_#{@conversation.id}"}) do |f| %>
    <%= f.text_area :content, class: "chatboxtextarea", 
       "data-cid" => @conversation.id %>
    <div class="chat-form-btns">    
         <%= f.submit "send", class: "btn btn-
         primary btn-sm btn-submit"%>
    </div>
  <% end %>
</div>
<%= subscribe_to "/messages/private/#{session[:username]}" %>

